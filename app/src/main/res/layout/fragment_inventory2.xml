<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red"
    tools:context=".Fragments.InventoryFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Brand Name Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Brand Name" />

            <!-- Model Spinner -->
            <Spinner
                android:id="@+id/spinner_brand_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dropdown_bg"
                android:layout_marginBottom="8dp"
                android:padding="5dp"
                android:prompt="@string/brand" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Model" />

            <Spinner
                android:id="@+id/spinner_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/model"
                android:padding="5dp"
                android:background="@drawable/dropdown_bg"
                android:layout_marginBottom="8dp" />

            <!-- Variant Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Variant" />

            <Spinner
                android:id="@+id/spinner_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/variant"
                android:padding="5dp"
                android:background="@drawable/dropdown_bg"
                android:dropDownSelector="@color/white"
                android:layout_marginBottom="8dp" />



            <!-- Condition Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Condition" />

            <Spinner
                android:id="@+id/spinner_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownSelector="@color/white"
                android:padding="5dp"
                android:background="@drawable/dropdown_bg"
                android:prompt="@string/condition"
                android:layout_marginBottom="8dp" />




            <!-- Price EditText -->
            <!-- Price EditText -->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:textColor="@color/w"-->
<!--                android:textStyle="bold"-->
<!--                android:text="Purchase Price" />-->

            <EditText
                android:id="@+id/edittext_purchase_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
            android:textColorHint="@color/white"
                android:hint="Purchase price"

                android:inputType="numberDecimal" />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:paddingBottom="8dp"-->
<!--                android:text="Selling Price" />-->

            <EditText
                android:id="@+id/edittext_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/white"
                android:textSize="12sp"
                android:textColorHint="@color/white"
                android:hint=" Selling price"
                android:inputType="numberDecimal" />


<!--            &lt;!&ndash; Quantity EditText &ndash;&gt;-->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:paddingBottom="8dp"-->
<!--                android:text="Quantity" />-->

            <EditText
                android:id="@+id/edittext_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/white"
                android:textSize="12sp"
                android:textColorHint="@color/white"
                android:hint="  quantity"
                android:inputType="number" />
<!--            &lt;!&ndash; Description EditText &ndash;&gt;-->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:paddingBottom="8dp"-->
<!--                android:text="Notes" />-->

            <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/white"
                android:textSize="12sp"
                android:textColorHint="@color/white"
                android:hint="Additional Notes" />



            <!-- Add Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:cornerRadius="5dp"
                android:layout_centerInParent="true"
                />



            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Total :" />


            <ExpandableListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="true"
                tools:listheader="@layout/expandable_list_header" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Login"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="@color/white"
            app:cornerRadius="5dp"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

</RelativeLayout>