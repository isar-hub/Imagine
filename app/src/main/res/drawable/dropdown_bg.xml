<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Background for the spinner item -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/white"/> <!-- Custom background for item -->
      <corners android:radius="4dp" />
      <padding android:right="0dp"
          android:left="12dp" />
    </shape>
  </item>

  <!-- Background for the spinner icon area -->
  <item android:gravity="end">
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <solid android:color="@color/black"/> <!-- Background for icon -->
          <corners android:bottomRightRadius="4dp"
              android:topRightRadius="4dp"/>
        </shape>
      </item>

      <!-- Spinner icon drawable -->
      <item
          android:drawable="@drawable/baseline_arrow_drop_down_24"
          android:gravity="center|end"/>
    </layer-list>
  </item>

</layer-list>
